{% extends "form/main/template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ title }}</h1>
      <p class="govuk-body-l">{{ caseNumber }}: {{ ethosCaseReference }}</p>
      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

      {{ govukSummaryList({
        rows: cyaContent
      }) }}

      {% if not isOnline %}
        <p class="govuk-body">{{ offlineNote }}</p>
      {% endif %}

      <div class="govuk-button-group">
        {% if isOnline %}
          {{ govukButton({
            text: submit,
            href: InterceptPaths.CONTACT_TRIBUNAL_SUBMIT + languageParam,
            preventDoubleClick: true
          }) }}
        {% else %}
          {{ govukButton({
            text: storeButton,
            href: InterceptPaths.CONTACT_TRIBUNAL_STORE + languageParam,
            preventDoubleClick: true
          }) }}
        {% endif %}
        <a class="govuk-link" href={{ cancelLink }}>{{ cancel }}</a>
      </div>
    </div>

    <div class="govuk-grid-column-one-third-from-desktop">
      {% set sideBarContent %}
        {% include "./components/sidebar/sidebar.njk" %}
      {% endset %}

      {{ govukDetails({
        summaryHtml: "<span id='contact-us-sidebar'>" + contact + "</span>",
        html: sideBarContent
      }) }}
    </div>
  </div>
{% endblock %}
