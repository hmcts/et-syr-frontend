{% extends "form/main/template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-l">{{ h1 }}</h1>
      <p class="govuk-body">{{ landing_text.p1 }}</p>
      <p class="govuk-body">{{ landing_text.p2 }}</p>
      <p class="govuk-body">{{ landing_text.p3 }}</p>

      {{ govukAccordion({
        id: "contact-options",
        items: applicationsAccordionItems,
        showAllSectionsText: showAllSections,
        hideAllSectionsText: hideAllSections,
        showSectionText: showSection,
        hideSectionText: hideSection
      }) }}

      <h2 class="govuk-heading-m">{{ call.h1 }}</h2>
      <p class="govuk-body">{{ call.p1 }} <br> {{ call.p2 }}</p>
      <h3 class="govuk-heading-m">{{ call.english.h1 }}</h3>
      <p class="govuk-body">{{ call.english.p1 }}</p>
      <h3 class="govuk-heading-m">{{ call.welsh.h1 }}</h3>
      <p class="govuk-body">{{ call.welsh.p1 }}</p>
      <h3 class="govuk-heading-m">{{ call.scottish.h1 }}</h3>
      <p class="govuk-body">{{ call.scottish.p1 }}</p>
      <p class="govuk-body">{{ call.p3 }} <br> {{ call.p4 }} <br> {{ call.p5 }}</p>
      <a href="https://www.gov.uk/call-charges" class="govuk-link" rel="noreferrer noopener" target="_blank">{{ call.link }}</a>
    </div>
  </div>
{% endblock %}
