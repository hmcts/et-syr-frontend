{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}
{% set errors = [] %}
{% set formErrors = getErrors(form.fields) %}
{% if formErrors|length %}
  {% set errors = errors.concat(formErrors) %}
{% endif %}
{{
  govukErrorSummary({
    titleText: errorSummaryTitle,
    errorList: errors
  }) if errors.length > 0
}}

{{
  govukErrorSummary({
    titleText: errorSummaryTitle,
    errorList: [
    {
      text: redisError
    }
  ]
  }) if redisError
}}


{% endblock %}
