{% extends "form/main/template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set writtenContract = "" %}
{% if userCase.noticePeriod %}
  {% if userCase.noticePeriod === "Yes" %}
    {% set writtenContract = yes %}
  {% elseif userCase.noticePeriodUnit === "No" %}
    {% set writtenContract = no %}
  {% endif %}
{% else %}
  {% set writtenContract = notProvided %}
{% endif %}

{% set noticePeriod = "" %}
{% if userCase.noticePeriodLength and userCase.noticePeriodUnit %}
  {% set periodUnit = "" %}
  {% if userCase.noticePeriodUnit === "Weeks" %}
    {% set periodUnit = weeks %}
  {% elseif userCase.noticePeriodUnit === "Months" %}
    {% set periodUnit = months %}
  {% endif %}
  {% set noticePeriod = userCase.noticePeriodLength + " " + periodUnit %}
{% else %}
  {% set noticePeriod = notProvided %}
{% endif %}

{{ text }}


{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "./form/main/error-summary.njk" %}
  {% endblock %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <span class="govuk-caption-l">{{ sectionTitle.s2 }}</span>
      <h1 class="govuk-heading-l">{{ title }}</h1>
      <p class="govuk-body">{{ p1 }}</p>

      {{ govukTable({
        caption: tableHeader,
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        rows: [
          [
            {
              text: writtenContractLabel
            },
            {
              text: writtenContract
            }
          ],
          [
            {
              text: noticePeriodLabel
            },
            {
              text: noticePeriod
            }
          ]
        ]
      }) }}

      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
    </div>

    <div class="govuk-grid-column-one-third-from-desktop">
      {% set sideBarContent %}
        {% include "./components/sidebar/sidebar.njk" %}
      {% endset %}

      {{ govukDetails({
        summaryHtml: "<span id='contact-us-sidebar'>" + contact + "</span>",
        html: sideBarContent
      }) }}
    </div>
  </div>
{% endblock %}
