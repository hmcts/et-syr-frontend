{% extends "form/main/template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block beforeContent %}
  {{ super() }}
{% endblock %}

{% if et3FormId !== '' %}
  {% set et3FormLink = "<a href=getCaseDocument/" + et3FormId + " target=\"_blank\">" + et3FormName + "</a>" %}
{% else %}
  {% set et3FormLink = et3FormNotFound %}
{% endif %}

{% if dcoument.id === undefined or document.id === '' %}
  {% set documentLink = '-' %}
{% else  %}
  {% set documentLink = "<a href=getCaseDocument/" + document.id + " target=\"_blank\">" + document.value.uploadedDocument.document_filename + "</a>" %}
{% endif %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    {{ govukPanel({
          titleText: titleText
      })
    }}

    <h2 class="govuk-heading-m">{{ heading1 }}</h2>
    <div class="govuk-body">
      <p>{{ p1 }}</p>
    </div>

    <h2 class="govuk-heading-m">{{ heading2 }}</h2>
      {{ govukSummaryList({
        rows: [
          {
            key: {
            text: caseNumber
          },
            value: {
            text: userCase.ethosCaseReference
          }
          },
          {
            key: {
            text: responseSubmitted
          },
            value: {
            text: et3ResponseSubmitted
          }
          },
          {
            key: {
            text: downloadResponse
          },
            value: {
            html: et3FormLink
          }
          },
          {
            key: {
            text: attachments
          },
            value: {
            text: attachedDocuments | safe
          }
          }
        ]
      }) }}

    <h2 class="govuk-heading-m">{{ heading3 }}</h2>
    <div class="govuk-body">
      <p><a href="{{ contactTribunalUrl }}" class="govuk-link" rel="noreferrer noopener" target="_blank"> {{ linkText }}</a></p>
    </div>
      <p class="govuk-body">
        {{ p3}}
      </p>

      <ul class="govuk-list">
        <li>
          {{mainTelephone}}
        </li>
        <li>
          {{welshTelephone}}
        </li>
        <li>
          {{scotlandTelephone}}
        </li>
      </ul>
      <p class="govuk-body">
        <a href="https://www.gov.uk/call-charges" class="govuk-link" target="_blank">{{ contactCharges }}</a>
      </p>

      <div class="govuk-button-group">
      {{ govukButton({
        text: button,
        href: redirectUrl
      }) }}
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds govuk-border black-border govuk-!-padding-bottom-2">
    <h2 class="govuk-heading-m">
      {{ survey.titleText }}
    </h2>
    <p class="govuk-body">
      <a href="{{ survey.url }}" class="govuk-link">{{ survey.linkText }}</a> {{ survey.text }}
    </p>
  </div>
</div>
{% endblock %}
