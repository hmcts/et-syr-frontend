{% extends "form/main/template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ pageTitle }}</h1>

      <p class="govuk-body">{{ responseLandingTxt1 }}</p>
      <p class="govuk-body">{{ responseLandingTxt2 }}</p>
      <p class="govuk-body">{{ responseLandingTxt3 }}</p>
      <p class="govuk-body">{{ responseLandingTxt4 }}</p>

      <p class="govuk-body">{{ completeFormInfo }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ completeFormInfoTxt1 }}</li>
        <li>{{ completeFormInfoTxt2 }}</li>
        <li>{{ completeFormInfoTxt3 }}</li>
      </ul>

      <p class="govuk-body">{{ rememberTxt }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ rememberTxt1 }}</li>
        <li>{{ rememberTxt2 }}</li>
        <li>{{ rememberTxt3 }}</li>
      </ul>

      {{ govukButton({
        text: startNow,
        href: redirectUrl,
        isStartButton: true
      }) }}
    </div>

    <div class="govuk-grid-column-one-third-from-desktop">
        {% set sideBarContent %}
          {% include "./components/response-hub/response-hub-sidebar.njk" %}
        {% endset %}

        {{ govukDetails({
          summaryHtml: "<span id='contact-us-sidebar'>" + contact + "</span>",
          html: sideBarContent
        }) }}
      </div>
  </div>
{% endblock %}
