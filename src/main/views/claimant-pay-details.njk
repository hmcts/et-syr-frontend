{% extends "form/main/template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% if userCase.payInterval %}
  {% set periodPay = userCase.payInterval %}
{% else %}
  {% set periodPay = notProvided %}
{% endif %}

{% if userCase.payBeforeTax %}
  {% set payBeforeTax = userCase.payBeforeTax %}
{% else %}
  {% set payBeforeTax = notProvided %}
{% endif %}

{% if userCase.payAfterTax %}
  {% set payAfterTax = userCase.payAfterTax %}
{% else %}
  {% set payAfterTax = notProvided %}
{% endif %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "./form/main/error-summary.njk" %}
  {% endblock %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <span class="govuk-caption-l">{{ sectionTitle.s2 }}</span>
      <h1 class="govuk-heading-l">{{ title }}</h1>
      <h2 class="govuk-heading-m">{{ subtitle }}</h2>

      {{ govukTable({
        firstCellIsHeader: true,
        rows: [
          [
            {
              text: periodPayLabel
            },
            {
              text: periodPay
            }
          ],
          [
            {
              text: payBeforeTaxLabel
            },
            {
              text: payBeforeTax
            }
          ],
          [
            {
              text: payAfterTaxLabel
            },
            {
              text: payAfterTax
            }
          ]
        ]
      }) }}

      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
    </div>

    <div class="govuk-grid-column-one-third-from-desktop">
      {% set sideBarContent %}
        {% include "./components/sidebar/sidebar.njk" %}
      {% endset %}

      {{ govukDetails({
        summaryHtml: "<span id='contact-us-sidebar'>" + contact + "</span>",
        html: sideBarContent
      }) }}
    </div>
  </div>
{% endblock %}
