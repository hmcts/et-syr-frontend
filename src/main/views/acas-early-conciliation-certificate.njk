{% extends "form/main/template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set acasCertLink = undefined %}

{% if acasCert !== undefined and acasCert.value !== undefined and acasCert.value.uploadedDocument !== undefined %}
    {% set acasCertLink = "<a href=getCaseDocument/" + acasCert.id + " target=\"_blank\">" + acasCert.value.uploadedDocument.document_filename + "</a>" %}
{% endif %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "./form/main/error-summary.njk" %}
  {% endblock %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <span class="govuk-caption-l">{{ sectionTitle.s2 }}</span>
      <h1 class="govuk-heading-l">{{ title }}</h1>

      <p class="govuk-body">{{ p1 }}</p>

      {% if acasCertLink %}
      <p class="govuk-body">
        {{ acasCertLink }}
      </p>
      {% endif %}

      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
    </div>

    <div class="govuk-grid-column-one-third-from-desktop">
      {% set sideBarContent %}
        {% include "./components/sidebar/sidebar.njk" %}
      {% endset %}

      {{ govukDetails({
        summaryHtml: "<span id='contact-us-sidebar'>" + contact + "</span>",
        html: sideBarContent
      }) }}
    </div>
  </div>
{% endblock %}
